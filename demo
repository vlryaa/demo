range 192.168.200.2 192.168.200.15;
option domain-name-servers 8.8.8.8;
option routers 192.168.200.1;
}
host hq-cli {
hardware ethernet ;
fixed-address 192.168.200.2;
}
sytemctl restart isc-dhcp-server

