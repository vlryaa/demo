iptables -t nat -A PREROUTING -d 172.16.5.2 -p tcp --dport 80 -j DNAT --to-destination 192.168.100.2:2024
HQ-RTR
iptables -t nat -A PREROUTING -d 172.16.4.2 -p tcp --dport 80 -j DNAT --to-destination 192.168.1.2:2024
